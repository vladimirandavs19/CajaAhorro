@model IEnumerable<CajaAhorro.Web.Data.Entities.BankCompany>

@{
    ViewData["Title"] = "Index";
}

@section SpecialHeader{
    <link href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <i class="fas fa-hand-holding-usd"></i> Accounts
            <small>List of banks</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
            <li class="active">Banks</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <!--------------------------
        | Your Page Content Here |
        -------------------------->
        <div class="box box-primary">
            <div class="box-header with-border">
                <a asp-action="Create" class="btn btn-lg btn-primary"><i class="fas fa-file"></i> Create New</a>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="grid">
                <div class="box-body">
                    <table class="table table-condensed table-responsive table-striped table-bordered" id="parameterTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.AccountNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Bank.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Company.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateCreate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateModify)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Deleted)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AccountNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bank.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateCreate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateModify)
                                    </td>
                                    <td>
                                        @if (item.Deleted)
                                        {
                                            <span class="label label-danger">Inactive</span>
                                        }
                                        else
                                        {
                                            <span class="label label-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-info"></i> Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(function () {
            $('#parameterTable').DataTable()
        })
    </script>
}
